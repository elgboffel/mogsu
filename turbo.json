{
	"$schema": "https://turbo.build/schema.json",
	"globalDependencies": [
		"**/.env.*local"
	],
	"pipeline": {
		"build": {
			"dependsOn": [
				"^build"
			],
			"outputs": [
				"dist/**",
				"lib/**",
				"lib-types/**"
			]
		},
		"web#build": {
			"dependsOn": [
				"^build", "^prebuild"
			],
			"outputs": [
				"dist/**"
			],
			"env": ["NEXT_PUBLIC_CMS_GRAPHQL_ENDPOINT", "NEXT_PUBLIC_CMS_TOKEN", "CODEGEN_ROOT_FOLDER_PATH"]
		},
		"lint": {},
		"typecheck": {},
		"format": {},
		"dev": {
			"cache": false
		}
	}
}
